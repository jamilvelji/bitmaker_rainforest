<h3><%= @product.name %></h3>
<h4>$<%= @product.formatted_price %></h4>
<p><%= @product.description %></p>

<% if current_user %>
<h4>Reviews for <%= @product.name %></h4>
<% @product.reviews.each do |review| %>
<p>
  <%= review.comment %>
  <br/>
  <% if review.user != nil %>
    <em>by <%= review.user.name %></em>
    Added on <%= review.created_at %>
  <% end %>
</p>
<% end %>

<% end %>

<h3>Add a Review</h3>
<%= form_for([@product, @review]) do |f| %>
    <% if @review.errors.any? %>
      <div id="error_explanation">
        <h4><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h4>

        <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_area :comment %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

<% else %>
  <p>Please <%= link_to "sign in", new_session_path %> to add a review.</p> 
<% end %>

<%= link_to "Back", products_url %>